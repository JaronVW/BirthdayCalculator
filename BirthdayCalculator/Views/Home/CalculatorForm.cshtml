@using System.Globalization
@model BirthdayCalculator.Models.BirthDate

@{
    ViewData["Title"] = "Voer Geboortedatum In";
}

<!DOCTYPE html>

<div >
    <h1>Voer hier je geboortedatum in!</h1>
    <form asp-action="CalculatorForm" method="post">
        <label asp-for="Name">Naam</label><input asp-for="Name">
        <label asp-for="Day">Dag</label><input asp-for="Day">
        <label asp-for="Month">Maand</label><input asp-for="Month">
        <label asp-for="Year">Jaar</label><input asp-for="Year">
        <button type="submit">Bereken</button>
    </form>
</div>